# Contentstack Configuration
# Copy this file to .env and fill in your actual values

# Contentstack API Host (usually https://api.contentstack.io)
CONTENTSTACK_API_HOST=https://eu-api.contentstack.com

# Contentstack Delivery API (usually https://cdn.contentstack.io)
CONTENTSTACK_DELIVERY_API=https://eu-cdn.contentstack.com

# Your Contentstack API Key
CONTENTSTACK_API_KEY=your_api_key_here

# Your Contentstack Delivery Token
CONTENTSTACK_DELIVERY_TOKEN=your_delivery_token_here

# Your Contentstack Management Token (for updates)
CONTENTSTACK_MANAGEMENT_TOKEN=your_management_token_here

# Your Contentstack Environment (e.g., development, production)
CONTENTSTACK_ENVIRONMENT=development

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_READS=200
RATE_LIMIT_MAX_WRITES=60

# NER Service Configuration
ENABLE_NER=false
SPACY_SERVICE_URL=http://localhost:8000
# Optional API key sent as `x-api-key` to the spaCy service. Leave blank if not used.
SPACY_API_KEY=

# NER Rate Limiting (more restrictive than general API)
NER_RATE_LIMIT_WINDOW_MS=60000
NER_RATE_LIMIT_MAX=30

# NER Reliability & Circuit Breaker
USE_FAKE_NER=false
NER_TIMEOUT_MS=10000
NER_RETRY_COUNT=3
NER_CIRCUIT_BREAKER_FAILURES=5
NER_CIRCUIT_BREAKER_TIMEOUT=30000
NER_CIRCUIT_BREAKER_SUCCESS=3